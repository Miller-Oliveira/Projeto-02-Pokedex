<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" type="image/png" href="./img/pokedex.png"/>
    <title>Pokedéx</title>
</head>

<body>
    <nav>
        <article>
            <img src="./img/pokebola-go.png" alt="">
            <h1><a href="/">Pokedéx</a></h1>
        </article>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/cadastro">Cadastro</a></li>
        </ul>
    </nav>
    
    <% if(message != "") {  %>
        <section id="message">
            <p><%= message %></p> <span id="close">&times;</span>
        </section>
    <% }  %>
 
    <% pokedex.forEach(i=> { %>
        <section id="pokedex">
            <a class="card" href="/detalhes">
               <img src="<%= i.imagem %>" alt="">
               <h2><%= i.nome %></h2>
               <h4><%= i.tipo %></h4>
            </a>
        </section>
        <% }) %>
       
        <script src="js/script.js"></script>
</body>

</html>